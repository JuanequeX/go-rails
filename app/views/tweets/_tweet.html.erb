<div class="d-flex flex-column mb-4 card card-body p-2">
  <div class="d-flex justify-content-between">
    <div>
      <%= image_tag tweet.twitter_account.image, class: 'img-thumbnail rounded-circle me-2' %>
      <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank %>
    </div>

    <div class="d-flex align-items-center">
      <% if tweet.published? %>
        <%= link_to 'View Tweet', "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :_blank, class: 'me-2' %>
      <%else%>
        <span class="me-2">Scheduled for <%= l tweet.publish_at, format: :long %></span>
        <%= button_to 'Unscheduled', tweet, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure to delete this account?' } %>
      <%end%>
    </div>
  </div>

  <div>
    <%= tweet.body %>
  </div>

</div>

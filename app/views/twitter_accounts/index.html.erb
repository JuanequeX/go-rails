<div class='d-flex align-item-center justify-content-between my-4'>
  <h1>Twitter Accounts </h1>
  <div>
    <%= link_to 'Connect a twitter account', '/auth/twitter', method: :post, class: 'btn btn-primary text-center' %>
  </div>
</div>


<% @twitter_accounts.each do |twitter_account| %>
  <div class='d-flex justify-content-between align-items-center mb-4 p-4 border border-primary rounded'>
    <div>
      <%= image_tag twitter_account.image, class: 'img-thumbnail rounded-circle me-2' %>
      <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank %>
    </div>

    <%= button_to 'Disconnect', twitter_account, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure to delete this account?' } %>
  </div>
<% end %>
